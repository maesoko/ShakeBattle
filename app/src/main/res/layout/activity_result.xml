<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jp.ac.it_college.std.s13012.shakebattle.ResultActivity">

    <TextView
        android:id="@+id/label_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="80sp"
        android:layout_centerHorizontal="true"
        android:text="@string/win"
        />

    <TextView
        android:id="@+id/label_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_result"
        android:layout_centerHorizontal="true"
        android:text="@string/time_attack"
        />

    <TextView
        android:id="@+id/label_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/label_mode"
        android:layout_toRightOf="@id/label_mode"
        android:layout_marginLeft="20dp"
        android:text="0"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/label_difficulty"
        android:layout_toRightOf="@id/label_difficulty"
        android:text="@string/unit_count"
        />

    <TextView
        android:id="@+id/label_number_of_times_you_shook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_mode"
        android:layout_centerHorizontal="true"
        android:text="振った回数"
        />

    <TextView
        android:id="@+id/label_shook_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/label_number_of_times_you_shook"
        android:layout_toRightOf="@id/label_number_of_times_you_shook"
        android:layout_marginLeft="20dp"
        android:text="0"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/label_shook_count"
        android:layout_toRightOf="@id/label_shook_count"
        android:text="@string/unit_count"
        />

    <TextView
        android:id="@+id/label_result_of_opponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_number_of_times_you_shook"
        android:layout_centerHorizontal="true"
        android:text="@string/result_of_opponent"
        />

    <TextView
        android:id="@+id/label_number_of_times_opponent_shook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/label_result_of_opponent"
        android:layout_toRightOf="@id/label_result_of_opponent"
        android:layout_marginLeft="20dp"
        android:text="0"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/label_number_of_times_opponent_shook"
        android:layout_toRightOf="@id/label_number_of_times_opponent_shook"
        android:text="@string/unit_count"
        />

    <TextView
        android:id="@+id/label_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="48sp"
        android:text="@string/go_to_title"
        />


</RelativeLayout>
